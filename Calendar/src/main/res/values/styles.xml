<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/mainColorLight</item>
    </style>

    <style name="ButtonStyle">
        <!-- Customize your theme here. -->
        <item name="android:visibility">visible</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="ButtonStyle.Gray">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="ButtonStyle.Today">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:drawable/presence_invisible</item>
        <item name="android:color">@color/mainColorLight</item>
    </style>

    <style name="ButtonStyle.Weekend">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/mainColor</item>
    </style>

    <style name="ButtonStyle.Workday">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/mainColorLight</item>
    </style>

    <style name="LineStyle">
        <item name="android:background">@color/mainColorLight</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="ButtonStyle.Arrow">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>

    </style>


</resources>
